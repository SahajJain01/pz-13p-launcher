{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "PZ 13th Pandemic Launcher",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "PZ 13th Pandemic Launcher",
        "width": 920,
        "height": 640
      }
    ],
    "bundle": {
      "targets": ["msi"],
      "identifier": "com.sahajjain.pz13p"
    },
    "build": {
      "beforeDevCommand": "bunx vite --port 5173",
      "devPath": "http://localhost:5173",
      "beforeBuildCommand": "bunx vite build",
      "distDir": "../dist"
    }
  }
}
